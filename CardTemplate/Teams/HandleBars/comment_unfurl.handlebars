{
  "preview":
  {
    "contentType": "application/vnd.microsoft.card.thumbnail",
    "contentUrl": null,
    "content": {
      "title": "Comment on #{{issue.number}} {{{formatted_title issue.title}}}",
      "subtitle": null,
      "text": "{{issue.user.login}} commented on this issue.",
      "images": [
        {
          "url": "{{issue.user.avatar_url}}",
          "alt": null,
          "tap": null
        }
      ],
      "buttons": null,
      "tap": null
    },
    "name": null,
    "thumbnailUrl": null
  },
  "contentType": "application/vnd.microsoft.card.adaptive",
  "content":
  {
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "TextBlock",
            "text": "Comment on #{{issue.number}} {{{formatted_title issue.title}}}",
            "weight": "bolder",
            "size": "large",
            "wrap": true
          },
          {
            "type": "ColumnSet",
            "spacing": "small",
            "columns": [
              {
                "type": "Column",
                "width": "auto",
                "items": [
                  {
                    "size": "small",
                    "type": "Image",
                    "url": "{{issue.user.avatar_url}}",
                    "height": "25px"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "spacing": "small",
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "[{{issue.user.login}}]({{issue.user.url}}) commented on this issue.",
                    "wrap": true
                  }
                ]
              }
            ]
          },
          {
            "type": "ColumnSet",
            "spacing": "small",
            "columns": [
              {
                "type": "Column",
                "width": "auto",
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "size": "small",
                    "type": "Image",
                    "url": "{{baseURL}}/static/img/github-mark.png",
                    "height": "15px"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "spacing": "small",
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "[{{{repository.full_name}}}]({{repository.html_url}})",
                    "wrap": true
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "separator":true,
        "items": [
          {{#if comment.body}}      
            {
              "type": "TextBlock",
              "text": "{{{formatted_body comment.body}}}",
              "wrap": true
            }
          {{/if}}
          {{#list_image comment.body}}
          ,
            {
              "type": "Image",
              "url": "{{this}}"
            }
          {{/list_image}}
        ]
      }
    ]
  }
}
