{
  "preview":
  {
    "contentType": "application/vnd.microsoft.card.thumbnail",
    "contentUrl": null,
    "content": {
      "title": "{{#if account.name}}{{{account.name}}}{{else}}{{{account.login}}}{{/if}}",
      "subtitle": null,
      {{#if account.bio}}
      "text": "{{{account.bio}}}",
      {{/if}}
      "images": [
        {
          "url": "{{account.avatar_url}}",
          "alt": null,
          "tap": null
        }
      ],
      "buttons": null,
      "tap": null
    },
    "name": null,
    "thumbnailUrl": null
  },
  "contentType": "application/vnd.microsoft.card.adaptive",
  "content":
  {
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "ColumnSet",
            "spacing": "small",
            "columns": [
              {
                "type": "Column",
                "width": "50px",
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "size": "small",
                    "type": "Image",
                    "url": "{{account.avatar_url}}",
                    "height": "50px"
                  }
                ]
              },
              {
                "type": "Column",
                "width": "auto",
                "spacing": "small",
                "verticalContentAlignment": "Center",
                "items": [
                  {
                    "type": "TextBlock",
                    "text": "{{#if account.name}}{{{account.name}}}{{else}}{{{account.login}}}{{/if}}",
                    "weight": "bolder",
                    "size": "large",
                    "wrap": true
                  }
                  {{#if account.bio}}
                  ,
                  {        
                    "type": "TextBlock",
                    "text": "{{{account.bio}}}",
                    "wrap": true,
                    "spacing": "None"
                  }
                 {{/if}}
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "separator":true,
        "items": [
          {
            "type": "FactSet",
            "separator":true,
            "facts": [
                {{#if account.location}}
                {
                  "title": "Location:",
                  "value": "{{{account.location}}}"
                },
                {{/if}}
                {
                  "title": "Repositories:",
                  "value": "{{account.public_repos}}"
                }
            ]
          }
        ]
      }
    ]
  }
}
